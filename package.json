{
  "name": "fasttyping",
  "displayName": "FastTyping",
  "description": "VSCode extension for a better typing comfort. Type faster.",
  "publisher": "ShAdDev",
  "version": "0.3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShAd-x/FastTyping"
  },
  "engines": {
    "vscode": "^1.99.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "FastTyping",
      "properties": {
        "fasttyping.maxShortcutLength": {
          "type": "number",
          "default": 10,
          "description": "Max length of characters to detect a shortcut."
        },
        "fasttyping.shortcuts": {
          "title": "Shortcuts",
          "type": "object",
          "default": {
            "common": {
              "--": "->",
              "àà": "@",
              "ùù": "%"
            },
            "php": {
              ";;": ".",
              "**": "{}"
            }
          },
          "description": "The shortcuts you want to use."
        }
      }
    },
    "commands": [
      {
        "command": "fasttyping.openConfig",
        "title": "FastTyping: Open Extension Configuration"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "glob": "^8.1.0",
    "mocha": "^10.8.2",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.5.2"
  }
}
